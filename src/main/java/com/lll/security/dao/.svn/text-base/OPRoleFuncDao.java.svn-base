package com.sitech.security.dao;

import java.util.List;

import org.mybatis.spring.support.SqlSessionDaoSupport;

import com.sitech.security.entity.OPRoleFunc;

public class OPRoleFuncDao extends SqlSessionDaoSupport{

	//按roleId查找
	public List<OPRoleFunc> findOPRoleFuncByRoleId(String key, String roleId){
		return this.getSqlSession().selectList(key, roleId);
	}
	
	//添加角色与菜单的对应关系
	public boolean addOPRoleFunc(OPRoleFunc opRoleFunc){
		if(opRoleFunc == null){//防卫性编程
			return false;
		}
		
		this.getSqlSession().insert("OPRoleFuncMapper.addOPRoleFunc", opRoleFunc);
		return true;
	}
	
	//修改角色与菜单的对应关系
	public boolean updateOPRoleFunc(String key, OPRoleFunc opRoleFunc){
		this.getSqlSession().update(key, opRoleFunc);
		return true;
	}
	
	//删除角色与菜单的对应关系
	public boolean deleteOPRoleFuncByRoleId(String key, Integer roleId){
		this.getSqlSession().delete(key, roleId);
		return true;
	}

}